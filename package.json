{
  "name": "node-typescript-starter",
  "version": "1.0.0",
  "description": "A starting point for any new Node TypeScript project",
  "main": "dist/app.js",
  "scripts": {
    "clean": "rimraf ./apps/*/build",
    "build": "npm run clean && for dir in ./apps/*/; do (cd $dir && npm run build); done",
    "start": "npm run build && forge deploy --no-verify",
    "start:dev": "npm run build && forge tunnel",
    "format": "prettier --write 'src/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' --fix --ext .ts",
    "lint": "eslint 'src/**/*.ts' --ext .ts || npm run --silent hook-errors"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/jsonwebtoken": "^8.5.9",
    "@types/jwk-to-pem": "^2.0.1",
    "@types/node": "^18.6.0",
    "@types/react": "^18.2.12",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "eslint": "^8.42.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-security": "^1.7.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-tsdoc": "^0.2.17",
    "prettier": "^2.8.7",
    "rimraf": "^5.0.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "@forge/api": "^2.16.0",
    "@forge/resolver": "^1.5.10",
    "@forge/ui": "^1.9.0",
    "jsonwebtoken": "^8.5.1",
    "jwk-to-pem": "^2.0.5",
    "react": "^18.2.0",
    "uuid": "^9.0.0"
  }
}
