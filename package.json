{
  "name": "node-typescript-starter",
  "version": "1.0.0",
  "description": "A starting point for any new Node TypeScript project",
  "main": "dist/app.js",
  "scripts": {
    "env:load": "export $(cat .env | xargs)",
    "clean": "rimraf dist",
    "build": "npm run clean && npm run env:load && tsup src/app.ts --format esm",
    "start": "npm run build -- --onSuccess 'node dist/app.js'",
    "start:dev": "npm run start -- --watch",
    "format": "prettier --write 'src/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' --fix --ext .ts",
    "lint": "eslint 'src/**/*.ts' --ext .ts || npm run --silent hook-errors",
    "hook-errors": "echo '\\x1b[31mThe build failed because a Forge UI hook is being used incorrectly. Forge UI hooks follow the same rules as React Hooks but have their own API definitions. See the Forge documentation for details on how to use Forge UI hooks.\n' && exit 1",
    "test": "vitest",
    "coverage": "vitest run --coverage"
  },
  "prepare": "npm run build",
  "author": "techsquidtv",
  "license": "MIT",
  "type": "module",
  "devDependencies": {
    "@types/node": "^18.6.0",
    "@types/react": "^18.2.6",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@vitest/coverage-c8": "^0.31.4",
    "eslint": "^8.38.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-security": "^1.7.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-tsdoc": "^0.2.17",
    "prettier": "^2.8.7",
    "rimraf": "^5.0.0",
    "tsup": "^6.7.0",
    "typescript": "^5.0.4",
    "vitest": "^0.30.1"
  },
  "dependencies": {
    "@forge/api": "^2.15.3",
    "@forge/ui": "^1.9.0",
    "react": "^18.2.0"
  }
}
